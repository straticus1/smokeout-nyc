# SmokeoutNYC v2.0 - Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "smokeout-nyc"
environment  = "dev" # dev, staging, production

# EC2 Configuration
instance_type   = "t3.small"
key_pair_name   = "your-aws-key-pair-name" # REQUIRED: Create this in AWS Console
ssh_cidr        = "0.0.0.0/0" # Restrict this to your IP for security

# Auto Scaling Configuration
min_capacity     = 1
max_capacity     = 3
desired_capacity = 2

# Database Configuration
db_name               = "smokeout_nyc"
db_user               = "admin"
db_password           = "your-secure-database-password-here" # REQUIRED: Use strong password
db_instance_class     = "db.t3.micro"
db_allocated_storage  = 20
db_max_allocated_storage = 100

# Application Security
jwt_secret = "your-super-secret-jwt-key-change-this-in-production" # REQUIRED: Use strong secret
