# SmokeoutNYC Option B Production Infrastructure Configuration

# Project Configuration
project_name = "smokeoutnyc"
env          = "prod"
aws_region   = "us-east-1"

# Network Configuration
vpc_cidr        = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]

# Database Configuration
mysql_engine_version = "8.0.35"
mysql_family         = "mysql8.0"
mysql_major_engine   = "8.0"
db_instance_class    = "db.t3.micro"  # Upgrade to db.t3.small or larger for production
db_name              = "smokeoutnyc"
db_username          = "admin"
# db_password should be set via environment variable:
# export TF_VAR_db_password="your-secure-password-here"

# Container Images (Update these with your actual ECR or Docker Hub images)
api_image      = "your-account.dkr.ecr.us-east-1.amazonaws.com/smokeoutnyc-api:latest"
realtime_image = "your-account.dkr.ecr.us-east-1.amazonaws.com/smokeoutnyc-realtime:latest"

# Resource Tags
tags = {
  Project     = "SmokeoutNYC"
  Environment = "production"
  ManagedBy   = "Terraform"
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
}
