# Database
DATABASE_URL="postgresql://username:password@localhost:5432/smokeout_nyc?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Email (for notifications and password reset)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@smokeout.nyc"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # or "live" for production

# Bitcoin (using a service like BlockCypher or similar)
BITCOIN_API_KEY="your-bitcoin-api-key"
BITCOIN_WALLET_ADDRESS="your-bitcoin-wallet-address"

# Maps API
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# File Upload
MAX_FILE_SIZE=5242880 # 5MB in bytes
UPLOAD_PATH="uploads/"

# App Configuration
NODE_ENV="development"
PORT=3001
CLIENT_URL="http://localhost:3000"
SERVER_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET="your-session-secret-change-this-in-production"

# AWS (for production deployment)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
S3_BUCKET_NAME="smokeout-nyc-uploads"

# Scraping Configuration
SCRAPING_DELAY=2000 # Delay between requests in milliseconds
USER_AGENT="SmokeoutNYC Bot 1.0"
