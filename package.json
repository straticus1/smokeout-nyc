{
  "name": "smokeout-nyc",
  "version": "1.0.0",
  "description": "NYC Smoke Shop Tracker - Track Operation Smokeout closures and smoke shop status",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node src/server/index.ts",
    "client:dev": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "ts-node src/server/scripts/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-facebook": "^3.0.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.7.4",
    "redis": "^4.6.11",
    "nodemailer": "^6.9.7",
    "paypal-rest-sdk": "^1.8.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.6.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "rate-limiter-flexible": "^3.0.8",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "dompurify": "^3.0.5",
    "jsdom": "^23.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-jwt": "^3.0.13",
    "@types/nodemailer": "^6.4.14",
    "@types/paypal-rest-sdk": "^1.7.9",
    "@types/multer": "^1.4.11",
    "@types/jest": "^29.5.8",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.6",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "prisma": "^5.7.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0"
  },
  "keywords": [
    "smoke-shop",
    "nyc",
    "operation-smokeout",
    "tracker",
    "map"
  ],
  "author": "Ryan",
  "license": "MIT"
}
